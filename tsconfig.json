{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "lib": ["es2022"],
    "rootDir": "src",
    "outDir": "dist",
    "types": ["jest"]
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
